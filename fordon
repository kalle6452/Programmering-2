using System;
class Fordon{
    private string tillverkare;
    public string Tillverkare
    //Creating Name property
        {
            get //get method for returning value
            {
                return tillverkare;
            }
            set // set method for storing value in name field.
            {
                tillverkare = value;
            }
        }
          private string modell;
    public string Modell
    {
    get {
        return modell;
    }
    set {
        modell = value;
    }
    }
    private int ålder;
    public int Ålder
    {
        get {
            return ålder;

        }
        set {
            ålder = value;
        }
    }
}
